@model string

<script src="~/assets/scripts/apps/A6FE8DE7-700B-4039-AC39-469C6E9A6787/RallyImport.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/assets/styles/apps/A6FE8DE7-700B-4039-AC39-469C6E9A6787/RallyImport.css" media="screen, projection" />

<p id="tab-help-message"><strong>»</strong>&nbsp;Import your stories, defects and tasks from Rally.</p>

<div id="cs-adhoc-page" class="rally-credentials">
    <p id="tab-help-message"><strong>»</strong>&nbsp;Enter your Rally credentials:</p>
    <form id="rally-credentials-form" action="" method="post" autocomplete="off">
        <table class="data-entry-box">
            <tr>
                <td>Url</td>
                <td><input type="text" class="input-size9 required" name="url" id="url" placeholder="https://rally1.rallydev.com" value="https://rally1.rallydev.com" /></td>
            </tr>
            <tr>
                <td class="no-wrap">Username</td>
                <td><input type="text" name="username" id="username" class="input-size9 required" /></td>
            </tr>
            <tr>
                <td class="no-wrap">Password</td>
                <td><input type="password" name="password" id="password" class="input-size9 required" /></td>
            </tr>
            <tr><td colspan="2"><div class="divider"></div></td></tr>
            <tr>
                <td colspan="2">
                    <input id="rally-connect" type="button" value='Connect' class='button-primary right' />
                </td>
            </tr>
        </table>
    </form>
</div>


<script type="text/javascript">
    $(document).ready(function () {        

        app_rallyImport.initCredentials();

    });
    </script>