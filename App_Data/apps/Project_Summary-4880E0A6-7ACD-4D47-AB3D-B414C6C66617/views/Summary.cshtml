@model Summary.SummaryModel

<script src="~/assets/scripts/apps/4880E0A6-7ACD-4D47-AB3D-B414C6C66617/Summary.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/assets/styles/apps/4880E0A6-7ACD-4D47-AB3D-B414C6C66617/Summary.css" media="screen, projection" />

<div id="page-reports">
    <div class="right clearfix" id="page-options-box">
        <div class="box-right size-0">
            <div id="report-menu">
                <form name="ReportParams" id="ReportParams">
                    <div class="option vertical-align">
                        <div class="control-icon gear" title="@GetResource(ResourceKeys.Filter)">
                        </div>
                        <div class="options">
                            <div class="break">&nbsp;</div>
                            <div class="clearfix">
                                <div id="ProjectFilterContainer" class="clearfix">
                                    @Html.Label("ProjectIds", GetResource(ResourceKeys.Project))
                                    <div class="left">
                                        @Html.ListBox("ProjectIds", Model.ProjectList, new { Multiple = "Multiple" })
                                    </div>
                                    @Html.Hidden("SummaryChart", @Model.Options.SummaryChart)
                                </div>
                            </div>                      
                        </div>
                    </div>
                    <div class="option">
                        <div class="control-icon chart-icon report-summary-chart-button"></div>
                        <div class="control-icon table-icon report-summary-table-button"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="report-content" class="clear-both"></div>

</div>

<script type="text/javascript">
$(document).ready(function ()
{    
    App_Summary.init();
})
</script>
