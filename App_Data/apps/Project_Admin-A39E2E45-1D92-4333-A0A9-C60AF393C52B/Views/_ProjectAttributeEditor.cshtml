@model ProjectAdmin.Models.ProjectAttribute

<div id="project-attribute-popup">
    <form id="project-attribute-form" enctype="multipart/form-data" method="post">
        <input type="hidden" name="projectId" value="@Model.ProjectId" />

        @if (Model.Attributeid > 0)
        {
            <input type="hidden" name="id" value="@Model.Attributeid" />
        }

        <table class="admin-data-entry" cellpadding="0" cellspacing="0">
            <tr>
                <td class="">Name</td>
                <td class=""><input name="name" type="text" class="input-size12 required" value="@(Model.Attributename != "" ? Model.Attributename : "")"/></td>
            </tr>
            <tr>
                <td class="">Value</td>
                <td class=""><textarea name="value" id="project-attribute-value">@(Model.Attributevalue != "" ? Model.Attributevalue : "")</textarea></td>
            </tr>
        </table>
    </form>

</div>
