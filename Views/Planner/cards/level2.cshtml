@using Countersoft.Foundation.Commons.Extensions
<div id='@Model.Issue.Id' data-project-id="@Model.Issue.Entity.ProjectId" class='plan-card @Model.Color clearfix'><div class='card-options-icon'><span class='fonticon-arrow-down'></span></div><div class='plan-content left'><p class="title" title="@Model.Issue.Title"><strong>@Model.Issue.IssueKey:</strong> @Model.Issue.Title</p><p><strong>@GetResource("Version"):</strong>&nbsp;@Model.Issue.FixedInVersion</p><p title="@Model.Issue.ResourceNames"><i>@Model.Issue.ResourceNames&nbsp;</i></p><div class='status'><div class='plan-icon-t@(Model.Issue.Entity.TypeId) left' title='@Model.Issue.Type'></div><div class='plan-icon-p@(Model.Issue.Entity.PriorityId) right' title='@Model.Issue.Priority' ></div></div><div class="percent" title="@Model.Issue.PercentComplete%"><div class="done" style="width:@Model.Issue.PercentComplete%;"></div></div></div></div>