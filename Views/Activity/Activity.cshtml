                    @foreach (IssueDto item in Model.OpenedRecently.Take(5))
                    {
                        <li>
                            <div class="card">
                                <div class="title">@item.Title.ToMaxMore(80)</div>
                                <div class="meta-info"><img src="@item.TypeImage"  alt="@item.Type" title="@item.Type"/> @item.IssueKey</div>
                                <div class="meta-status">@item.Status</div>
                            </div>
                        </li>                    
                    }
                </ul>
                </a>
            </li>

            <li class="stream">
                <a href="activity/closed-recently">
                <div class="header"><div class="color-code closed-color"></div><div class="column-head">@GetResource(ResourceKeys.ClosedRecently, Resourcing.Lower) (@Model.ClosedRecently.Count)</div></div>
                <ul class="cards">
                    @foreach(IssueDto item in Model.ClosedRecently)
                    {
                    <li>
                        <div class="card">
                            <div class="title">@item.Title.ToMaxMore(80)</div>
                            <div class="meta-info"><img src="@item.TypeImage"  alt="@item.Type" title="@item.Type"/> @item.IssueKey</div>
                            <div class="meta-status">@item.Status</div>
                        </div>
                    </li>                    
                    }
                </ul>
                </a>
            </li>
        </ul>
    </div>

</article>
</div>

