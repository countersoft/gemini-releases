@model TextBoxFieldModel

<input type="@(Model.Hidden ? "hidden" : "text")" data-input-type="text" title="@Model.Tooltip" id="@Model.Id" name="@Model.Id" data-original="@Model.Value" value="@Model.Value" class="inline-editing input-tall input-size12 @Model.Classes @(Model.Required ? "required" : "")" @if(Model.MaxLength.GetValueOrDefault() > 0) { <text>maxlength="@Model.MaxLength.Value"</text> } @if(Model.RegEx.HasValue()) {<text>regex="@Model.RegEx"</text>}/>
