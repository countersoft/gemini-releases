@model StepInfo
<div class='section-header clearfix'>
<div class="clearfix">
<div id='section-steps' class="left"><span class='expander fonticon-arrow-down'></span><h3>@GetResource(ResourceKeys.Steps) (@Model.Steps.Count)</h3></div>
<div class='toolbar actions right'>
@Html.Partial("_AddStepLink", Model.Info)
</div>
</div>
<div class='divider'></div>
<div class='section-content expanded'>
@if (Model.Steps.Count > 0)
{
<table id="run-details" class="width-100 pad-bottom-5"><tbody>
<tr class="cs-grid-column">
    <th>@GetResource(ResourceKeys.Step)</th>
    <th>@GetResource(ResourceKeys.ExpectedResults)</th>
    <th>@GetResource(ResourceKeys.Status)</th>
    <th></th>
</tr>
@foreach (var x in Model.Steps)
{
<tr id='step-@x.Id'>
<td class='cs-title'>@Html.Raw(x.Description)</td>
<td class='cs-text'>@Html.Raw(x.ExpectedResult)</td>
<td class='cs-status'>@Html.Partial("_TestStatus", new TestStatus() { HasPassed = x.HasPassed })</td>
<td class='cs-simple'>@Html.Partial("_DeleteCaseStepLink", x)</td>
</tr>
}
</tbody></table>
}
</div></div>